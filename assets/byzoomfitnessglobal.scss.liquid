@font-face {
  font-family: 'icomoon';
  src: url('{{ 'icomoon.eot?vzvn6t' | asset_url }}');
  src: url('{{ 'icomoon.eot?vzvn6t#iefix' | asset_url }}') format('embedded-opentype'),
  url('{{ 'icomoon.ttf?vzvn6t' | asset_url }}') format('truetype'),
  url('{{ 'icomoon.woff?vzvn6t' | asset_url }}') format('woff'),
  url('{{ 'icomoon.svg?vzvn6t#icomoon' | asset_url }}') format('svg');
  font-weight: normal;
  font-style: normal;
  font-display: block;
}

.btn.site-nav__thumb-button {
  background: rgba(0, 0, 0, .93);
}

.header-wrapper--overlay:not(.header-wrapper--sticky) .site-header:hover {
  background: #fff;

  .site-nav__link {
    color: var(--colorNavText);
  }

  .logo--inverted {
    display: none;
  }

  .logo--has-inverted {
    height: auto;
    opacity: 1;
    overflow: hidden;
    visibility: visible;
  }
}

@media only screen and (min-width: 769px) {
  .site-nav {
    font-size: calc(var(--typeBaseSize) * 1.22) !important;
  }
}

@media only screen and (max-width: 900px) {
  .small--hide {
    display: none !important;
  }
}

@media only screen and (max-width: 900px) {
  .header-layout--mobile-logo-only {
    justify-content: center;
  }
}

.site-nav__link--icon .icon {
  height: 24px;
  width: 24px;
}

[class^="icon-"], [class*=" icon-"] {
  /* use !important to prevent issues with browser extensions that change fonts */
  font-family: 'icomoon' !important;
  speak: never;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;

  /* Better Font Rendering =========== */
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.icon-arrow-right2:before {
  content: "\ea3c";
}

.slide-nav__overflow {
  background: rgba(0, 0, 0, .93) !important;

  .slide-nav__wrapper {
    background: transparent;
  }
}

.mb-menu-logo {
  display: block;
  border-bottom: 1px #fff solid;
  padding: 20px;
  text-align: center;
  width: 85%;
  margin: 0 auto;

  img {
    width: 85%;
    margin: 0 auto;
  }
}

.mb-menu-open {
  overflow: hidden;
}

.slide-nav__overflow--thumb .slide-nav__dropdown {
  background: transparent;
  padding: 0;
}

.top-sticky-nav {
  padding: 15px 0 1px;
  margin-bottom: 0 !important;
  position: sticky;
  top: -2px; /* zeus 20240104; */
  background-color: rgba(0, 0, 0, .93);
  transform: translate3d(0, 0, 0);
}

[data-button_style=round] .site-nav__thumb-button.is-active {
  background: rgba(0, 0, 0, .93) !important;
}

.site-nav__details:hover summary:before {
  bottom: -15px !important;
  border-bottom-width: 3px !important;
}

.site-nav__dropdown {
  position: absolute;
  left: 0;
  top: auto;
  width: 100vw;
  max-width: 1920px;
  padding: 0;
  box-shadow: none;
  background: #fff;
  justify-content: center;
  z-index: 2;
  cursor: default;
}

.site-nav__link {
  position: relative;
}

.site-nav__item {
  position: static;
}

.slide-nav__item {
  margin-bottom: 5px;
}

.byzoom-mb-menu {
  background: #fff;
  padding: 10px 15px;

  .more-title {
    font-weight: 700 !important;
    margin: 0 5px 10px;
    display: block;
    font-size: 20px;
    color: #9e7d54;
  }

  .more-asset {
    margin-top: 0;

    a {
      display: block;
      color: #000;
      font-weight: 700;
      font-size: 13px;
      letter-spacing: 1px;
      line-height: 1.0625rem;
      padding: 5px 5px 16px;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .menu-subcategories {
    margin: 0;
    display: flex;
    flex-wrap: wrap;
    list-style: none;

    li {
      width: 100%;
      padding: 5px 5px 15px;
      margin: 0;

      img {
        width: 100%;
      }
    }

    .img {
      background-size: contain;
      background-repeat: no-repeat;
      display: block;
      padding: 0;
      min-height: 75px;
      background-color: #f7f7f7;
      background-position: center center;
    }

    a.bold-name {
      font-weight: 700 !important;
      margin: 10px 0 15px;
      font-size: 20px;
      color: #9e7d54;
    }

    a {
      display: block;
      color: #000;
      font-size: 16px;
      margin-bottom: 5px;

      &:hover {
        text-decoration: underline;
      }
    }
  }
}

.site-nav__details > .site-nav__dropdown {
  background-color: transparent;

  &:before {
    content: "";
    border-top: 1px solid #e1e1e1;
    position: absolute;
    left: 0;
    right: 0;
    top: 15px;
  }

  .white {
    background-color: #fff;

    .page-width {
      padding-bottom: 10px;
    }
  }

  .transparent {
    background-color: rgba(0, 0, 0, .8);
  }
}

.byzoom-menu {
  padding-top: 30px;
  padding-bottom: 30px;

  .menu-content {
    .more-title {
      font-size: 22px;
      letter-spacing: .1em;
      color: #fff;
      font-weight: 700;
    }

    .more-icon {
      font-size: 22px;
      color: #fff;
    }

    .more-asset {
      display: grid;
      grid-template-rows: auto auto;
      grid-auto-flow: column;
      justify-content: flex-start;
      gap: 10px 40px;
    }

    .header-link {
      line-height: 1.75rem;
      display: block;
      font-size: 15px;
      background: transparent;
      color: #fff;
      padding-right: 0;

      &:hover {
        text-decoration: underline;
      }
    }
  }

  .menu-subcategories {
    display: flex;
    flex-wrap: wrap;
    align-self: flex-start;
    padding: 0;
    margin: 30px 0 20px;
    width: 100%;
    gap: 0 30px;

    .dropdown-itemX {
      border: none;
      white-space: normal;
      padding-bottom: 16px;
      display: block;
      flex-basis: calc(25% - 24px);
      clear: both;
      font-weight: 400;
      color: #212529;
      text-align: inherit;

      .img {
        background-size: cover;
        background-repeat: no-repeat;
        display: block;
        padding: 0;
        min-height: 160px;
        background-color: #f7f7f7;
        background-position: center center;
      }

      a.bold-name {
        font-weight: 700 !important;
        margin: 10px 0 10px;
        font-size: 17px;
        color: #9e7d54;
      }

      a {
        display: block;
        color: #000;
        font-size: 14px;

        &:hover {
          text-decoration: underline;
        }
      }
    }


    &.subcategories_size1, &.subcategories_size2, &.subcategories_size3 {
      flex-wrap: nowrap;

      .dropdown-itemX {
        flex-basis: calc(33% - 15px);
      }
    }
  }
}

