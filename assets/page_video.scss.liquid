.sean_page-width {
  /* max-width: 80vw; */
  max-width: 100vw;
  
  .video-page {
    .all-items-width {
      background: #F7F7F7;
      padding: 60px 0;
      text-align: center;
      margin-top: 60px;
      margin-bottom: -120px;
  
      .page-width {
        h3 {
          font-size: 28px;
        }
  
        h4 {
          margin-top: -20px;
          color: #8C8C8C;
          font-size: 16px;
        }
  
        div {
          display: flex;
          flex-wrap: wrap;
          justify-content: space-between;
  
          iframe {
            margin: 10px 5px;
            border: 0;
            height: 225px;
            width: 418px;
            float: left;
          }
        }
      }
    }
  
    .items {
      border-bottom: 1px solid #DCDCDC;
      position: relative;
      margin-bottom: 50px;
  
      button {
        width: 100%;
        padding: 0;
  
        .collapsible-trigger__icon {
          position: relative;
          width: 100%;
          border: 0;
          text-align: left;
          padding: 0;
  
          span {
            color: #C9B16D !important;
            display: block;
            width: 95%;
            word-break: break-all;
          }
  
          .icon {
            left: auto;
            right: 0;
          }
        }
  
        &:hover {
          color: #9E7D53 !important;
        }
      }
  
      .collapsible-content__inner--faq {
        border: 1px solid #DCDCDC;
        display: flex;
        padding: 0;
  
        .video-wrapper {
          padding-bottom: 30%;
          width: 55%;
          margin: 0;
        }
  
        .flex-align-center {
          flex: 1;
          padding: 0 2rem;
          display: flex;
          align-items: center;
  
          .text-golden {
            color: #9E7D53;
          }
  
          .font-22 {
            font-size: 22px;
          }
  
          .font-20 {
            font-size: 20px;
          }
  
          ul {
            margin: 0;
            text-align: left;
            list-style-type: none;
          }
  
          ul.noneStyle > li {
            list-style: none;
            font-size: 15px;
            line-height: 180%;
          }
  
          .font-weight-500 {
            font-weight: 500;
          }
  
          .text-8C8C8C {
            color: #8C8C8C;
          }
        }
      }
    }
  }
}

@media (max-width: 767px) {
  .page-width {
    padding: 0 20px;
  }
  
  .sean_page-width {
    max-width: 100vw;
        
    .video-page {
      .items button {
        padding: 0 0 5px 0;
      }
      
      .items .collapsible-content__inner--faq {
        display: block;
  
        .video-wrapper {
          width: 100%;
          padding-bottom: 56%;
        }
  
        .flex-align-center {
          padding: 20px;
        }
      }
  
      .all-items-width {
        .page-width {
          div {
            /* display: block; */
            padding: 0 20px;
  
            iframe {
              margin: 10px 0;
              width: 100%;
            }
          }
        }
      }
    }
  }
}