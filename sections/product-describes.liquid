    display: inline-block; 
    width: 84%; 
    left: -10px;
  }

  @media only screen and (max-width: 767px) {
    #shopify-section-{{ section.id }} .wrapperH {
      width: 30%; 
      /* height: 821.438px; */
    }
  
    #shopify-section-{{ section.id }} .slideshow-wrapper { 
      width: 69%; 
      left: -3px;
    }
  }
  
