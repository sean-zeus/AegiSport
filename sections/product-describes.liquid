{% schema %}
{
  "name": "t:sections.product-describes.name",
  "max_blocks": 10,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.product-describes.settings.title.label",
      "default": "product-describes"
    },
    {
      "type": "select",
      "id": "align_text",
      "label": "t:sections.product-describes.settings.align_text.label",
      "default": "center",
      "options": [
        {
          "value": "left",
          "label": "t:sections.product-describes.settings.align_text.options.left.label"
        },
        {
          "value": "center",
          "label": "t:sections.product-describes.settings.align_text.options.center.label"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "round_images",
      "label": "t:sections.product-describes.settings.round_images.label",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "alt",
      "label": "t:sections.product-describes.settings.alt.label"
    },
    {
      "type":"html",
      "id": "table-title",
      "label": "t:sections.product-describes.settings.table-title.label",
      "default": "<p>table-title.</p>"
    },       
  ],
  "blocks": [
    {
      "type": "product-describe",
      "name": "t:sections.product-describes.blocks.product-describe.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.product-describes.blocks.product-describe.settings.image.label"
        },
        {
          "type": "text",
          "id": "pname",
          "label": "t:sections.product-describes.blocks.product-describe.settings.pname.label",
          "default": "Product's name"
        },        
        {
          "type":"html",
          "id": "product-describe",
          "label": "t:sections.product-describes.blocks.product-describe.settings.product-describe.label",
          "default": "<p>Add product describes.</p>"
        },
        {
          "type": "text",
          "id": "buttom_text",
          "label": "t:sections.product-describes.blocks.product-describe.settings.buttom_text.label",
          "default": "More.."
        },   
        {
          "type":"url" ,
          "id": "buttom_link",
          "label": "t:sections.product-describes.blocks.product-describe.settings.buttom_link.label",
        }        
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.product-describes.presets.product-describes.name",
      "blocks": [
        {
          "type": "product-describe"
        },
        {
          "type": "product-describe"
        },
        {
          "type": "product-describe"
        },
        {
          "type": "product-describe"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
